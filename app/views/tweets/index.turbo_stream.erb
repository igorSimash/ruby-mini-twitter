<%= turbo_stream.append "tweets" do %>
  <%= render partial: "tweets/shared/tweet", collection: @tweets %>
<% end %>

<% if @tweets.next_page %>
  <%= turbo_stream.replace "load_more" do %>
    <%= turbo_frame_tag "load_more", src: tweets_path(page: @tweets.next_page, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>
