<%= turbo_frame_tag "modal" do %>
  <div class="modal-bg">
    <div class="max-w-xl p-8 mx-auto my-8 bg-white shadow-md md:max-w-2xl rounded-xl">
      <button data-controller="modals" data-action="click->modals#close">
        <%= inline_svg_tag("icons/arrow_left.svg") %>
      </button>

      <h1 class="my-6 text-4xl font-bold">Editing tweet</h1>

      <%= render "tweets/form", tweet: @tweet %>
    </div>
  </div>
<% end %>
