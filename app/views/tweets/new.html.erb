<%= turbo_frame_tag "modal" do %>
  <div class="modal-bg">
    <div class="max-w-xl p-8 mx-auto my-8 bg-white shadow-md md:max-w-2xl rounded-xl">
      <%= button_tag data: {controller: "modals", action: "click->modals#close"} do %>
        <%= inline_svg_tag("icons/arrow_left.svg") %>
      <% end %>

      <h1 class="my-6 text-4xl font-bold">New tweet</h1>

      <%= render "tweets/shared/form", tweet: @tweet %>
    </div>
  </div>
<% end %>
