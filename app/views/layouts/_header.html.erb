<header class="bg-white shadow-sm">
  <nav class="px-4 mx-auto max-w-8xl sm:px-6 lg:px-8" aria-label="Top">
    <div class="flex items-center justify-between w-full py-4 border-b border-indigo-500 lg:border-none">
      <div class="flex items-center">
        <%= link_to "Untweet", user_signed_in? ? authenticated_root_path : unauthenticated_root_path,
            class: "text-2xl font-bold text-indigo-600"%>
      </div>
      <div class="flex items-center space-x-4 ">
      <% if user_signed_in? %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: "link-primary" %>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn-danger" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "link-primary" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "link-default" %>
      <% end %>
      </div>
    </div>
  </nav>
</header>
