<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false" class="mb-4">
    <div class="relative px-4 py-2.5 text-red-700 bg-red-100 border border-red-400 rounded" role="alert">
      <strong class="font-bold">Error!</strong>
      <span id="error-text">
        <%= resource.errors.full_messages[0] %>
      </span>
    </div>
  </div>
<% end %>
